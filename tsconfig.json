{
  "ts-node": {
    "files": true
  },
  "include": [
    "lib/**/*.ts",
    "./package.json",
    "lib/environment.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}